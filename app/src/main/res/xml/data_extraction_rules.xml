<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup>
        <!-- Exclude sensitive data from cloud backup -->
        <exclude domain="database" path="notification_manager_db"/>
        <exclude domain="sharedpref" path="app_prefs.xml"/>
    </cloud-backup>

    <device-transfer>
        <!-- Allow device transfer for non-sensitive data -->
        <include domain="sharedpref" path="settings.xml"/>
    </device-transfer>
</data-extraction-rules>